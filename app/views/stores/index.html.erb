<center><h3 >STORES</h3></center>
<div class="Store index"><br>
    <br><br><br>
    <%=link_to"Create new store",new_store_path,id:'create-store',class:'btn create-store',role:'button'%>
    <%=link_to"UPLOAD CSV FILE",store_transactions_path,id:'csv-upload',class:'btn csv-upload',role:'button'%>
