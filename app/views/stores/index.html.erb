    <!-- <image src="/assets/search.png", heignt="30px", width="30px", alt="serach", class="index-search"> -->
    <form class="d-flex search">
    <input  onkeyup="searchStore()" id="searchbar" class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
    </form>
   
    <div class="row justify-content-center ">
    <div class="col-auto index-table">
    <div class="table-responsive">
    <table class="table table-hover table-borderless" id="table_id"  summary="Store list">
        <tr class="header">
            <th scope="col">Store ID</th>
            <th scope="col">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Store Name</th>
            <th scope="col">&nbsp;&nbsp;&nbsp;&nbsp;City</th>
        </tr>
        <% @stores.each do |store| %>
        <tr>
            <td scope="row"><%=store.id%></td>
            <td scope="row"><%=link_to store.store_name,store_path(store), id:'show'%></td>
            <td scope="row"><%=store.city%></td>
           
            
        </tr>
        <%end%>
    </table>
</div>
