<center><h3 class="daily_Report_heading" >Monthly Report</h3></center>
<br><br><br>
<center>
<div class="card filter" style="width: 650px;">
    
    <div class="card-body">
      
        <%= form_with  url:monthly_report_store_url, local: true,html: {class: "date_form"}  do |form| %>
        <%= form.month_field :month , class:"form",required: true %> 
        <%= form.submit  "OK", class:"monthly_report_submit"  %>
        
         <% end %> 
              
    </div>
</div>
</center>
<br><br><br><br>
<form class="d-flex daily_search">
     <input  onkeyup="searchStore()" id="searchbar" class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
    </form>
<%=link_to image_tag("/assets/data-transfer-download.png" ,height:"20px", width:"20px", class:"download")+" Export to CSV",monthly_report_store_path(format: "csv" , params: params.to_unsafe_h),class:"btn monthly_report",role:'button'%><br>

        <div class="row justify-content-center ">
            <div class="col-auto index-table">
                <div class="table-responsive">  
   
<table class="table table-hover table-borderless monthly_report_table table-responsive" id="table_id" summary="Store list">

<tr class="header">
    <th scope="col" class="col">Trans_date</th>
    <th scope="col" class="col">Store </th>
    <th scope="col" class="col">TID#</th>
    <th scope="col" class="col">Store Type</th>
    <th scope="col" class="col">Counter</th>
    <th scope="col" class="col">Status</th>
    <th scope="col" class="col">Mode</th>
    <th scope="col" class="col">Card Type</th>
    <th scope="col" class="col">Brand Type</th>
    <th scope="col" class="col">Amount</th>
    <th scope="col" class="col">Store MDR</th>
    <th scope="col" class="col">Amount</th>
    <th scope="col" class="col">GST</th>
    <th scope="col" class="col">Store Payabale</th>
    <th scope="col" class="col">Acquring Bank</th>
    
</tr>
<%if @monthly_reports.empty? %>
<tr>
    <td colspan="15" scope="row" class="blank">No result found</td>
</tr>
<% else %>
<% @monthly_reports.each do |monthly_report| %>
<tr>
    <td scope="row"><%=monthly_report.date %></td>
    <td scope="row"><%=monthly_report.store_name %></td>
    <td scope="row"><%=monthly_report.tid %></td>
    <td scope="row">Others</td>
    <td scope="row"></td>
    <td scope="row"><%=monthly_report.status %></td>
    <td scope="row">Card</td>
    <td scope="row"><%=monthly_report.card_type %></td>
    <td scope="row"><%=monthly_report.card_network %></td>
    <td scope="row"><%=monthly_report.amount %></td>
    <td scope="row"><%=monthly_report.store_mdr %></td>
    <td scope="row"><%=monthly_report.new_amount %></td>
    <td scope="row"><%=monthly_report.gst_amount %></td>
    <td scope="row"><%=monthly_report.total_amount %></td>
    <td scope="row"><%=monthly_report.acquirer %></td>

        

        
</tr>

<%end%>
<tr>
    <td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td><h5>Total</h5></td>
    <td scope="row"><h5><%=@amount_sum%></h5></td>
    <td></td><td><h5><%=@new_amount%></h5></td><td><h5><%=@gst%></h5></td><td><h5><%=@payable_amount%></h5></td><td></td>
</tr>
<%end%>

