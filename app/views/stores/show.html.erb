<%=link_to("Back to list",stores_path) %>
<!-- Trigger/Open The Modal -->
<button id="myBtn">Reports</button>

<!-- The Modal -->
<div id="myModal" class="modal">

  <!-- Modal content -->
  <div class="modal-content">
    <div class="modal-header">
      <span class="close"  style="  float: right;">&times;</span>
      
    </div>
    <div class="modal-body">
    <%= form_with  url:daily_report_store_url, local: true   do |form| %>
        <%= form.date_field :day  , class:"form"%> 
        <%= form.submit "Daily report", class:"submit"  %>
    <% end %>
    <%= form_with  url:monthly_report_store_url, local: true  do |form| %>
        <%= form.month_field :month , class:"form" %> 
        <%= form.submit  "Monthly report", class:"submit"  %>
        
    <% end %> 
    
    </div>
    
  </div>

</div>



